<assembly>
    <!--id is used for classifier in attached artifact-->
    <id>coberturaReporting</id>
    <formats>
        <format>tar.gz</format>
        <!--format>dir</format-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${basedir}/src/main/java/coberturaScripts/cobertura.xml</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/main/java/coberturaScripts/cobertura.properties</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/antjars</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>net.sourceforge.cobertura:cobertura</include>
            </includes>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/sources/marketplace</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:marketplace:jar:sources</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/sources/website-core</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:website-core:jar:sources</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/sources/core</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:core:jar:sources</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/cobertura</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:marketplace:ser:cobertura</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/cobertura</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:website-core:ser:cobertura</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/cobertura</outputDirectory>
            <scope>compile</scope>
            <includes>
                <include>com.bankbazaar:core:ser:cobertura</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>